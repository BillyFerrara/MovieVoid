<ul>
<% @reviews.each do |r| %>

<br>
<br>
<li> <strong>Movie:</strong> <%= r.movie.title %> 
    <br>
 <li><strong>Rating:</strong> <%= r.rating %>
    <br>
<li> <strong>Review:</strong> <%= r.content %>
    <% if current_user.id == r.user_id %>
    <%= link_to "Edit", edit_user_review_path(current_user, r.id) %> |
    <%= link_to "Delete", user_review_path(current_user, r.id) , method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>


<% end %>
<br>
<br>
<%= link_to "My Page", user_path(current_user)%>
</ul>