<%= form_tag sessions_path do %>
    <%= label_tag "Username" %>
    <%= text_field_tag :username %>
    <%= label_tag "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>
<% end %>

<%= link_to "Log in with Github!", "/auth/github" %> | 
<%= link_to "Sign Up", signup_path %>
